      "label": "t:sections.video.settings.video.label"
    },
    {
      "id": "video_url",
      "type": "video_url",
      "label": "t:sections.video.settings.video_url.label",
      "accept": [
        "youtube",
        "vimeo"
      ],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
    },
    {
      "id": "image",
      "type": "image_picker",
      "label": "t:sections.video.settings.image.label",
      "info": "t:sections.video.settings.image.info"
    },
    {
      "id": "loop",
      "type": "checkbox",
      "label": "t:sections.video.settings.loop.label",
      "default": false
    },
    {
      "id": "media_aspect_ratio",
      "type": "select",
      "label": "t:sections.video.settings.aspect_ratio.label",
      "options": [
        {
          "label": "t:shared.settings.aspect_ratio.option_portrait",
